{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="mb-6">
            <a href="{{ path('category_index') }}" class="text-blue-600 hover:text-blue-900 mb-4 inline-block">&larr; Back to Categories</a>
            <h1 class="text-3xl font-bold">{{ category.name }}</h1>
        </div>

        {% for message in app.flashes('success') %}
            <div class="flash-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="flash-error bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white shadow-md rounded p-6 mb-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold">Category Details</h2>
                <div class="space-x-2">
                    <a href="{{ path('category_edit', {id: category.id}) }}" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">
                        Edit
                    </a>
                    <form action="{{ path('category_delete', {id: category.id}) }}" method="POST" class="inline-block" data-turbo-confirm="Are you sure you want to delete this category?">
                        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="bg-white shadow-md rounded p-6">
            <h2 class="text-xl font-semibold mb-4">Subscriptions</h2>

            {% if category.subscriptions|length > 0 %}
                <ul class="divide-y divide-gray-200">
                    {% for subscription in category.subscriptions %}
                        <li class="py-3">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-900">{{ subscription.name }}</span>
                                <span class="text-gray-600">${{ subscription.cost }} / {{ subscription.paymentPeriod.value }}</span>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-600">No subscriptions in this category</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
