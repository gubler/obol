{% extends 'base.html.twig' %}

{% block title %}New Payment - {{ subscription.name }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="mb-6">
            <a href="{{ path('subscription_show', {id: subscription.id}) }}" class="text-blue-600 hover:text-blue-900 mb-4 inline-block">&larr; Back to {{ subscription.name }}</a>
            <h1 class="text-3xl font-bold">Record Payment</h1>
            <p class="text-gray-600 mt-1">for {{ subscription.name }}</p>
        </div>

        <div class="bg-white shadow-md rounded p-6 max-w-2xl">
            {{ form_start(form, {attr: {class: 'space-y-6'}}) }}

            {{ form_widget(form) }}

            <div class="flex justify-end space-x-3">
                <a href="{{ path('subscription_show', {id: subscription.id}) }}" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                    Cancel
                </a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Save
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
