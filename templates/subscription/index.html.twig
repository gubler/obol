{% extends 'base.html.twig' %}

{% block title %}Obol{% endblock %}

{% block header %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold tracking-tight text-white">
            Subscriptions
        </h1>
        <a href="{{ path('subscription_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            New subscription
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">

        {% for message in app.flashes('success') %}
            <div class="flash-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% if subscriptions|length > 0 %}
            <div class="bg-white shadow-md rounded overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for subscription in subscriptions %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ subscription.name }}
                                    {% if subscription.archived %}
                                        <span class="archived-badge ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Archived</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="{{ path('subscription_show', {id: subscription.id}) }}" class="text-blue-600 hover:text-blue-900 mr-3">View</a>
                                    <a href="{{ path('subscription_edit', {id: subscription.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state bg-gray-100 border border-gray-300 rounded-lg px-6 py-12 text-center">
                <p class="text-gray-600 text-lg">No subscriptions found</p>
                <p class="text-gray-500 mt-2">Get started by creating your first subscription</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
