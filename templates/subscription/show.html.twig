{% extends 'base.html.twig' %}

{% block title %}{{ subscription.name }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="mb-6">
            <a href="{{ path('subscription_index') }}" class="text-blue-600 hover:text-blue-900 mb-4 inline-block">&larr; Back to Subscriptions</a>
            <h1 class="text-3xl font-bold">{{ subscription.name }}</h1>
        </div>

        {% for message in app.flashes('success') %}
            <div class="flash-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="flash-error bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white shadow-md rounded p-6 mb-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold">Subscription Details</h2>
                <div class="space-x-2">
                    <a href="{{ path('subscription_edit', {id: subscription.id}) }}" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">
                        Edit
                    </a>
                    {% if subscription.archived %}
                        <form action="{{ path('subscription_unarchive', {id: subscription.id}) }}" method="POST" class="inline-block">
                            <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                                Unarchive
                            </button>
                        </form>
                    {% else %}
                        <form action="{{ path('subscription_archive', {id: subscription.id}) }}" method="POST" class="inline-block" data-turbo-confirm="Are you sure you want to archive this subscription?">
                            <button type="submit" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">
                                Archive
                            </button>
                        </form>
                    {% endif %}
                    <form action="{{ path('subscription_delete', {id: subscription.id}) }}" method="POST" class="inline-block" data-turbo-confirm="Are you sure you want to delete this subscription?">
                        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                            Delete
                        </button>
                    </form>
                </div>
            </div>

            <dl class="mt-4 space-y-2">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Category</dt>
                    <dd class="text-lg text-gray-900">{{ subscription.category.name }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Cost</dt>
                    <dd class="text-lg text-gray-900">${{ (subscription.cost / 100)|number_format(2) }} / {{ subscription.paymentPeriod.value }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Last Paid Date</dt>
                    <dd class="text-lg text-gray-900">{{ subscription.lastPaidDate|date('Y-m-d') }}</dd>
                </div>
                {% if subscription.description %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Description</dt>
                    <dd class="text-lg text-gray-900">{{ subscription.description }}</dd>
                </div>
                {% endif %}
                {% if subscription.link %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Link</dt>
                    <dd class="text-lg text-gray-900"><a href="{{ subscription.link }}" target="_blank" class="text-blue-600 hover:text-blue-900">{{ subscription.link }}</a></dd>
                </div>
                {% endif %}
            </dl>
        </div>

        <div class="payments-section bg-white shadow-md rounded p-6 mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold">Payments</h2>
                <a href="{{ path('payment_new', {subscriptionId: subscription.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Add Payment
                </a>
            </div>

            {% if subscription.payments|length > 0 %}
                <ul class="divide-y divide-gray-200">
                    {% for payment in subscription.payments %}
                        <li class="py-3">
                            <div class="flex justify-between items-center">
                                <div>
                                    <span class="text-gray-900">{{ payment.createdAt|date('Y-m-d') }}</span>
                                    <span class="ml-2 text-xs text-gray-500">{{ payment.type.value }}</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <span class="text-gray-600">${{ (payment.amount / 100)|number_format(2) }}</span>
                                    <form action="{{ path('payment_delete', {id: payment.id}) }}" method="POST" class="payment-delete-form inline-block" data-turbo-confirm="Are you sure you want to delete this payment?">
                                        <button type="submit" class="text-red-600 hover:text-red-900 text-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-600">No payments recorded</p>
            {% endif %}
        </div>

        <div class="bg-white shadow-md rounded p-6">
            <h2 class="text-xl font-semibold mb-4">History</h2>

            {% if subscription.subscriptionEvents|length > 0 %}
                <ul class="divide-y divide-gray-200">
                    {% for event in subscription.subscriptionEvents %}
                        <li class="py-3">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-900">{{ event.type.value }}</span>
                                <span class="text-gray-600">{{ event.createdAt|date('Y-m-d H:i') }}</span>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-600">No history available</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
